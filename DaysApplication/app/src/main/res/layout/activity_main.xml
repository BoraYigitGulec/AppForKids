<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="25dp"
        android:text="Days of the Week"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonThursday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons"
        android:text="Thursday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaturday"
        app:layout_constraintEnd_toStartOf="@+id/buttonFriday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTuesday" />

    <Button
        android:id="@+id/buttonSunday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttons"
        android:text="Sunday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonTuesday"
        app:layout_constraintEnd_toStartOf="@+id/buttonMonday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTuesday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/buttons"
        android:text="Tuesday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonThursday"
        app:layout_constraintEnd_toStartOf="@+id/buttonWednesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSunday" />

    <Button
        android:id="@+id/buttonFriday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="253dp"
        android:background="@drawable/buttons"
        android:text="Friday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonThursday"
        app:layout_constraintTop_toBottomOf="@+id/buttonWednesday" />

    <Button
        android:id="@+id/buttonWednesday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/buttons"
        android:text="Wednesday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonFriday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTuesday"
        app:layout_constraintTop_toBottomOf="@+id/buttonMonday" />

    <Button
        android:id="@+id/buttonMonday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttons"
        android:text="Monday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonWednesday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSunday"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSaturday"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/buttons"
        android:text="Saturday"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonThursday" />

</androidx.constraintlayout.widget.ConstraintLayout>